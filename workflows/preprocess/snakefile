# penguin = config["penguin_data"]
# tbl_1 = config["res_tab_1"]


rule read_data:
    input:
        # data="../../data/raw/data.xlsx",
        excel_codes=f"{excel_codes_path}",
        data_dir=f"{subj_data_dir}",
    output:
        # out="../../data/prep/groundhog_init.RDS",
        out=f"{complete_raw_data_path}",
    script:
        "scripts/import_mpath_data.R"


